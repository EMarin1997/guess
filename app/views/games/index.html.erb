<h1> Listing Games! </h1>
<table>
  <tr>
    <th>Answer</th>
    <th>Guesses</th>
    <th colspan="3"></th>
  </tr>
 
  <% @games.each do |game| %>
    <tr>
      <td><%= game.answer %></td>
      <td><%= game.guess_count %></td>
      <td><%= link_to 'Play', game_path(game) %></td>
      <td><%= link_to 'Delete', game_path(game),
                      method: :delete, data: { confirm: 'Are you sure?'
} %></td>
    </tr>
  <% end %>
</table>

<%= link_to 'New Game', new_game_path %>